@model IEnumerable<AlexAndNikki.Models.BlogPost>
@{
    Layout = "~/Views/Shared/Master.cshtml";
}
<script type="text/javascript">
    $(function ()
    {
        $('.deletePost').click(function (e)
        {
            if (!confirm('Are you sure you want to delete this post?'))
            {
                e.preventDefault();
                return false;
            }
        });
    });
</script>
<style type="text/css">
    table#blogposts
    {
        margin: auto;
        border: solid 1px #aa0000;
        background-color: #ffffff;
    }
    table#blogposts th
    {
        font-family: Arial;
    }
    table#blogposts td
    {
        text-align: center;
    }
    table#blogposts table.options td
    {
        padding: 0px 10px 0px 10px;
        border: none;
    }
</style>
<div>
    @Html.ActionLink("<< Back to Administration Panel", "Index")
</div>
<div id="pageTitle">
    Manage Blogs
</div>
<br />
<table id="blogposts" border="1" cellpadding="10" cellspacing="0">
    <tr>
        <td colspan="2" style="text-align: center;">
            <a id="AddNew" href="@Url.Action("AddBlogPost")">
                <img style="width: 20px; border: none;" src="@Url.Content("~/Content/images/addnew.png")" />
                Create New Post</a>
        </td>
    </tr>
    <tr>
        <th>
            Title
        </th>
        <th>
            Options
        </th>
    </tr>
    @foreach (AlexAndNikki.Models.BlogPost post in Model)
    {
        <tr>
            <td>
                @post.Title
            </td>
            <td style="text-align: center;">
                <table class="options">
                    <tr>
                        <td>
                            <a href="@Url.Action("EditBlogPost", new { Id = post.Id })">
                                <img title="Edit Blog Post" style="width: 20px; border: none;" src="@Url.Content("~/Content/images/edit.png")" />
                            </a>
                        </td>
                        <td>
                            <a href="@Url.Action("DeleteBlogPost", new { Id = post.Id })" class="deletePost">
                                <img title="Delete Blog Post" style="width: 20px;border: none;" src="@Url.Content("~/Content/images/delete.gif")" />
                            </a>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    }
</table>
